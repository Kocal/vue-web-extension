{
  "name": "{{ name }}",
  "version": "1.0.0",
  "description": "{{ description }}",
  "author": "{{ author }}",
  {{#if license}}"license": "{{ license }}",{{/if}}
  "scripts": {
    {{#lint}}
    "lint": "eslint --ext .js,.vue src",
    {{/lint}}
    {{#prettier}}
    {{#if_eq prettierHook "prettyQuick"}}
    "precommit": "pretty-quick --staged",
    {{/if_eq}}
    {{#if_eq prettierHook "preciseCommits"}}
    "precommit": "precise-commits",
    {{/if_eq}}
    "prettier": "prettier \"src/**/*.{js,vue}\"",
    "prettier:write": "npm run prettier -- --write",
    {{/prettier}}
    "build": "cross-env NODE_ENV=production webpack --hide-modules",
    "build:dev": "cross-env NODE_ENV=development webpack --hide-modules",
    "build-zip": "node scripts/build-zip.js",
    "watch": "npm run build -- --watch",
    "watch:dev": "cross-env HMR=true npm run build:dev -- --watch"
  },
  "dependencies": {
    {{#mozillaPolyfill}}"webextension-polyfill": "^0.3.1",{{/mozillaPolyfill}}
    {{#axios}}"axios": "^0.18.0",{{/axios}}
    {{#router}}"vue-router": "^3.0.1",{{/router}}
    {{#store}}"vuex": "^3.0.1",{{/store}}
    "vue": "^2.5.17"
  },
  "devDependencies": {
    {{#lint}}
    "babel-eslint": "^10.0.1",
    "eslint": "^5.7.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-vue": "^5.0.0-beta.3",
    {{#if_eq lintConfig "standard"}}
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    {{/if_eq}}
    {{#if_eq lintConfig "airbnb"}}
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.12.0",
    {{/if_eq}}
    {{/lint}}
    {{#prettier}}
    "prettier": "^1.14.3",
    {{#if_eq prettierHook "prettyQuick"}}
    "husky": "^0.14.3",
    "pretty-quick": "^1.8.0",
    {{/if_eq}}
    {{#if_eq prettierHook "preciseCommits"}}
    "husky": "^0.14.3",
    "precise-commits": "^1.0.2",
    {{/if_eq}}
    {{#lint}}
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-config-prettier": "^3.1.0",
    {{/lint}}
    {{/prettier}}
    {{#mozillaPolyfill}}
    "web-ext-types": "^2.1.0",
    {{else}}
    "@types/chrome": "^0.0.74",
    {{/mozillaPolyfill}}
    "archiver": "^3.0.0",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "babel-loader": "^8.0.2",
    "copy-webpack-plugin": "^4.5.3",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "ejs": "^2.6.1",
    "file-loader": "^1.1.11",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "vue-loader": "^15.4.2",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.20.2",
    "webpack-chrome-extension-reloader": "^0.8.3",
    "webpack-cli": "^3.1.2",
    "webpack-shell-plugin": "^0.5.0"
  }
}
