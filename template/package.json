{
  "name": "{{ name }}",
  "version": "1.0.0",
  "description": "{{ description }}",
  "author": "{{ author }}",
  {{#if license}}"license": "{{ license }}",{{/if}}
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    {{#lint}}
    "lint": "eslint --ext .js,.vue src",
    {{/lint}}
    "prettier": "prettier \"src/**/*.{js,vue}\"",
    "prettier:write": "npm run prettier -- --write",

    "build": "cross-env NODE_ENV=production webpack --hide-modules",
    "build:dev": "cross-env NODE_ENV=development webpack --hide-modules",
    "build-zip": "node scripts/build-zip.js",
    "watch": "npm run build -- --watch",
    "watch:dev": "cross-env HMR=true npm run build:dev -- --watch"
  },
  {{#prettier}}
  "husky": {
    "hooks": {
      {{#if_eq prettierHook "prettyQuick"}}
      "pre-commit": "pretty-quick --staged"
      {{/if_eq}}
      {{#if_eq prettierHook "preciseCommits"}}
      "pre-commit": "precise-commits"
      {{/if_eq}}
    }
  },
  {{/prettier}}
  "dependencies": {
    {{#mozillaPolyfill}}"webextension-polyfill": "^0.3.1",{{/mozillaPolyfill}}
    {{#axios}}"axios": "^0.19.0",{{/axios}}
    {{#router}}"vue-router": "^3.0.1",{{/router}}
    {{#store}}"vuex": "^3.0.1",{{/store}}
    "vue": "^2.6.10"
  },
  "devDependencies": {
    {{#lint}}
    "babel-eslint": "^10.0.3",
    "eslint": "^6.6.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^3.0.2",
    "eslint-plugin-vue": "^6.0.1",
    {{#if_eq lintConfig "standard"}}
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    {{/if_eq}}
    {{#if_eq lintConfig "airbnb"}}
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.18.2",
    {{/if_eq}}
    {{/lint}}
    {{#prettier}}
    "prettier": "^1.17.1",
    {{#if_eq prettierHook "prettyQuick"}}
    "husky": "^2.4.0",
    "pretty-quick": "^1.8.0",
    {{/if_eq}}
    {{#if_eq prettierHook "preciseCommits"}}
    "husky": "^2.4.0",
    "precise-commits": "^1.0.2",
    {{/if_eq}}
    {{#lint}}
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-config-prettier": "^6.7.0",
    {{/lint}}
    {{/prettier}}
    {{#mozillaPolyfill}}
    "web-ext-types": "^2.1.0",
    {{else}}
    "@types/chrome": "^0.0.74",
    {{/mozillaPolyfill}}
    "archiver": "^3.0.0",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/runtime-corejs3": "^7.4.0",
    "babel-loader": "^8.0.2",
    "copy-webpack-plugin": "^5.1.1",
    "core-js": "^3.0.1",
    "cross-env": "^5.2.0",
    "css-loader": "^3.4.0",
    "ejs": "^2.6.1",
    "file-loader": "^5.0.2",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "vue-loader": "^15.4.2",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.3.10",
    "webpack-extension-reloader": "^1.1.0"
  }
}
